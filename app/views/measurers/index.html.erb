<p id="notice"><%= notice %></p>

<h1>Lista de Servicios</h1>

<div class="row">
<div class="col">
<table class="table table-hover table-bordered ">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Servicio</th>
      <th>Unidad de Medidas</th>
      <th>Descripcion</th>
      <th>Umbrail Sobre Consumo</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurers.each do |measurer| %>
      <tr>
        <td><%= measurer.id_measure %></td>
        <td><%= measurer.name %></td>
        <td><%= measurer.uni %></td>
        <td><%= measurer.description %></td>
        <td><%= measurer.umbrail %></td>
        <td><%= link_to ' Editar', edit_measurer_path(measurer), class: " btn bg-primary far fa-address-card" %></td>
        <td><%= link_to 'Eliminar', measurer, class:"btn bg-danger far fa-trash-undo-alt", method: :delete, data: { confirm: 'Confirma para eliminar?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Agregar Servicio', new_measurer_path, class: "btn bg-info far fa-building"%>
